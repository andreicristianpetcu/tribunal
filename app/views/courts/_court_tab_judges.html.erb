<div class="tab-pane fade in" id="judges">
<div class="bs-component">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <td>
          Nume
        </td>
        <td>
          Prenume
        </td>
      </tr>
    </thead>

    <tbody>
      <% @trial_judges.each do |trial_judge| %>
        <tr>
          <td>
            <%= trial_judge.surname %>
          </td>
          <td>
            <%= trial_judge.name %>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <%= paginate @trial_judges.all, :param_name => :court_judges_page %>
</div>

</div>
