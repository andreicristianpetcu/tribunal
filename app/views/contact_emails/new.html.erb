
<section>
  <div class="mainContainer">
    <div class="row">
      <div class="col-md-1 col-xs-0 col-sm-0"></div>
      <div class="col-md-5 col-xs-12 col-sm-6">
        <h2>Avem date pentru fiecare instanță din România:</h2>
        <ul class="find-more">
          <li>află cât de performantă e fiecare instanță </li>
          <li>află date agregate despre fiecare instanță</li>
          <li>află cum se traduce legaleza în română</li>
          <li>află cum funcționează sistemul juridic</li>
        </ul>
      </div>
      <div class="col-md-6 col-xs-12 col-sm-6">
        <img src="assets/map.jpg" class="img-responsive">
      </div>
    </div>
  </div>
</section>
<%= form_for(@contact_email) do |f| %>
  <% if @contact_email.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact_email.errors.count, "error") %> prohibited this contact_email from being saved:</h2>

      <ul>
        <% @contact_email.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <form class="form-horizontal">
    <fieldset>
      <p>Pentru mai multe informații abonează-te! (maximum un mail pe lună)</p>
      <div class="row">
        <div class="col-lg-5">
          <%= f.text_field(:name, :class => "form-control", :placeholder => "Nume") %>
        </div>
        <div class="col-lg-5">
          <%= f.text_field(:email, :class => "form-control", :placeholder => "Adresă de email") %>
        </div>
        <div class="col-lg-2">
          <%= f.submit('Abonează-mă!', :class => "btn btn-primary subscribe_button") %>
        </div>
      </div>
    </fieldset>
  </form>
<% end %>
